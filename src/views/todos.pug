extends layout.pug

block content
  h1="tada"
  form(method="post", action="/todos")
    input(type="text", placeholder="New Todo", name="description")
    input(type="submit", value="Add")
  ul
    each todo in todos
      li
        input(type="checkbox", id="todo-" + todo.id)
        label(for="todo-" + todo.id)=todo.description
